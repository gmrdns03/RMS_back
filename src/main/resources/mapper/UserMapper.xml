<!-- UserMapper.xml -->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.LimeRMS.mapper.UserMapper">
    <select id="findByUserEmail" parameterType="java.lang.String" resultType="com.project.LimeRMS.entity.User">
        SELECT * FROM User WHERE userEmail = #{userEmail}
    </select>
    <update id="updatePasswordByUserEmail">
        UPDATE User
        SET password = #{password}
        WHERE userEmail = #{userEmail}
    </update>
    <insert id="signup">
        INSERT INTO User
        (
            userEmail,
            userNm,
            password,
            phoneNumber
        ) VALUES (
            #{userEmail},
            #{userNm},
            #{password},
            #{phoneNumber}
        )
    </insert>
</mapper>