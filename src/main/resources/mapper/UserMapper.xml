<!-- UserMapper.xml -->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.LimeRMS.mapper.UserMapper">
    <select id="findByUserEmail" parameterType="java.lang.String" resultMap="userResultMap">
        SELECT
            u.*,
            a.*
        FROM User u
        LEFT JOIN
            Authentication a ON u.authId = a.authId
        WHERE userEmail = #{userEmail}
    </select>

    <resultMap id="userResultMap" type="com.project.LimeRMS.entity.User">
        <id property="userId" column="userId" />
        <result property="userEmail" column="userEmail" />
        <result property="profileImg" column="profileImg" />
        <result property="userNm" column="userNm" />
        <result property="password" column="password" />
        <result property="isSuperUser" column="isSuperUser" />
        <result property="phoneNumber" column="phoneNumber" />
        <result property="delYn" column="delYn" />
        <association property="authentication" javaType="com.project.LimeRMS.entity.Authentication">
            <id property="authId" column="authId" />
            <result property="authNm" column="authNm" />
            <result property="authDesc" column="authDesc" />
            <result property="priority" column="priority" />
        </association>

    </resultMap>

    <update id="updatePasswordByUserEmail">
        UPDATE User
        SET password = #{password}
        WHERE userEmail = #{userEmail}
    </update>

    <insert id="addUser">
        INSERT INTO User
        (   userEmail,
            userNm,
            password,
            phoneNumber,
            authId
        ) VALUES (
            #{userEmail},
            #{userNm},
            #{password},
            #{phoneNumber},
            #{authId})
    </insert>

    <select id="findByUserId" parameterType="java.lang.String" resultType="com.project.LimeRMS.entity.User">
        SELECT * FROM User WHERE userId = #{userId}
    </select>

    <update id="updateProfileImgByUserId">
        UPDATE User
        SET profileImg = #{profileImg}
        WHERE userId = #{userId}
    </update>

    <select id="findAllUser" resultType="com.project.LimeRMS.entity.User">
        SELECT * FROM User
    </select>
    <select id="findAuthIdByUserId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT authId FROM User WHERE userId = #{userId}
    </select>

</mapper>